{
  "$schema": "vscode://schemas/settings/default",
  // ==============================
  // AZURE
  "azureFunctions.projectSubpath": "server/Functions",
  "azureFunctions.deploySubpath": "server/Functions/bin/Release/net10.0/publish",
  "azureFunctions.projectLanguage": "C#",
  "azureFunctions.projectRuntime": "~4",
  "azureFunctions.preDeployTask": "publish-functions",
  // ==============================
  // GITHUB COPILOT
  "chat.customAgentInSubagent.enabled": true,
  "chat.mcp.assisted.nuget.enabled": true,
  "chat.useAgentSkills": true,
  "chat.useAgentsMdFile": true,
  "chat.useNestedAgentsMdFiles": true,
  "dotnet.defaultSolution": "Charts.sln",
  "github.copilot.chat.agentCustomizationSkill.enabled": true,
  "github.copilot.chat.copilotMemory.enabled": true,
  "github.copilot.chat.githubMcpServer.enabled": true,
  "github.copilot.chat.githubMcpServer.readonly": false,
  "github.copilot.chat.githubMcpServer.toolsets": [
    // ref: https://github.com/github/github-mcp-server?tab=readme-ov-file#tools
    "default", // default: context, repos, issues, pull_requests, users
    "actions",
    "projects",
    "git",
    "copilot",
    "github_support_docs_search",
    "web_search"
  ],
  "github.copilot.chat.switchAgent.enabled": true,
  // ==============================
  // LINTERS
  "eslint.workingDirectories": ["client"],
  "eslint.validate": ["javascript", "typescript", "html"],
  "eslint.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,
  "prettier.resolveGlobalModules": true,
  // ==============================
  // IDE BEHAVIOR
  "debug.internalConsoleOptions": "neverOpen",
  "problems.showCurrentInStatus": true,
  "problems.sortOrder": "severity",
  "search.exclude": {
    "**/node_modules": true,
    "**/bin": true,
    "**/obj": true,
    "**/dist": true,
    "**/*-lock.json": true
  },
  // ==============================
  // LANGUAGES
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "javascript.validate.enable": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.validate.enable": true
}
